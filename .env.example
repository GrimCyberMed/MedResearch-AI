# MedResearch AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_PATH=./data/.memory/project-memory.db

# =============================================================================
# MEDICAL DATABASE API KEYS
# =============================================================================

# PubMed/NCBI E-utilities API Key
# Get your key at: https://www.ncbi.nlm.nih.gov/account/
PUBMED_API_KEY=your_pubmed_api_key_here

# Semantic Scholar API Key
# Get your key at: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# The Lens API Key
# Get your key at: https://www.lens.org/lens/user/subscriptions
LENS_API_KEY=your_lens_api_key_here

# =============================================================================
# OPEN ACCESS TOOLS
# =============================================================================

# Unpaywall API - Email Required
UNPAYWALL_EMAIL=your.email@institution.edu

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

PORT=3000
HOST=localhost

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=info
LOG_FILE=./data/logs/medresearch-ai.log

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

PUBMED_RATE_LIMIT=10
SEMANTIC_SCHOLAR_RATE_LIMIT=1
LENS_RATE_LIMIT=50
EUROPE_PMC_RATE_LIMIT=5
UNPAYWALL_RATE_LIMIT=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_PUBMED=true
ENABLE_EUROPE_PMC=true
ENABLE_SEMANTIC_SCHOLAR=true
ENABLE_LENS=true
ENABLE_UNPAYWALL=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

NODE_ENV=production
DEBUG=false
