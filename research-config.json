    },
    "systematic-review": {
      "type": "systematic-review",
      "folderStructure": {
        "citations": true,
        "data": true,
        "analysis": true,
        "figures": true,
        "tables": true,
        "documents": true,
        "exports": true,
        "logs": true,
        "customFolders": []
      },
      "templates": [
        "prisma-checklist",
