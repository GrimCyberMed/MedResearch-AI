        "analysis": true,
        "figures": true,
        "tables": true,
        "documents": true,
        "exports": true,
        "logs": true,
        "customFolders": [
          "quantitative-data",
          "qualitative-data",
          "integration"
        ]
      },
      "templates": [
        "prisma-checklist",
        "mmat-tool",
        "mixed-methods-extraction"
      ],
      "requiredFields": [
        "population",
